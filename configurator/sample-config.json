{
    "actions": [
        {
            "type": "command",
            "label": "Ouvrir avec code",
            "command_line": "code %f",
            "cwd": "%f",
            "use_shell": true
        },
        {
            "type": "command",
            "label": "Copier chemin d'accÃ©s",
            "command_line": "echo -n %F | xclip -f -selection primary | xclip -selection clipboard",
            "use_shell": true
        },
        {
            "type": "command",
            "label": "Copier nom",
            "command_line": "echo -n %B | xclip -f -selection primary | xclip -selection clipboard",
            "use_shell": true
        },
        {
            "type": "command",
            "label": "Nouveau TEXTE",
            "command_line": "touch new.txt",
            "cwd": "%f",
            "use_shell": true
        },
        {
            "type": "command",
            "label": "Nouveau SCRIPT",
            "command_line": "echo \"#!/bin/bash\" > new.sh && chmod +x new.sh",
            "cwd": "%f",
            "use_shell": true
        },
        {
            "type": "command",
            "label": "Nouveau PYTHON",
            "command_line": "touch new.py",
            "cwd": "%f",
            "use_shell": true
        },
        {
            "type": "menu",
            "label": "Make install",
            "actions": [
                {
                    "type": "command",
                    "label": "MAKE",
                    "command_line": "gnome-terminal -- bash -i -c \"make\"",
                    "cwd": "%f"
                },
                {
                    "type": "command",
                    "label": "make config",
                    "command_line": "gnome-terminal -- bash -i -c \"./configure && make && sudo make install\"",
                    "cwd": "%f"
                },
                {
                    "type": "command",
                    "label": "Make clean",
                    "command_line": "gnome-terminal -- bash -i -c \"make clean\"",
                    "cwd": "%f"
                }
            ]
        },
        {
            "type": "menu",
            "label": "Folder Actions",
            "actions": [
                {
                    "type": "command",
                    "label": "Execute command here",
                    "command_line": "$(zenity --entry --text \"Enter command\" --title \"execute command in %f\" --width 800)",
                    "cwd": "%f",
                    "use_shell": true,
                    "max_items": 1,
                    "filetypes": [
                        "directory"
                    ]
                },
                {
                    "type": "command",
                    "label": "Start HTTP server here",
                    "command_line": "gnome-terminal -t \"HTTP Server on %f\" -- python3 -m http.server --bind 127.0.0.1",
                    "cwd": "%f",
                    "max_items": 1,
                    "mimetypes": [
                        "inode/directory"
                    ]
                }
            ]
        },
        {
            "type": "menu",
            "label": "CODE TEMPLATES",
            "actions": [
                {
                    "type": "menu",
                    "label": "C",
                    "actions": [
                        {
                            "type": "command",
                            "label": "C builder 1",
                            "command_line": "git clone --branch nautilus https://github.com/SECRET-GUEST/cTemplate.git c_template_1",
                            "cwd": "%f",
                            "use_shell": true
                        }
                    ]
                },
                {
                    "type": "menu",
                    "label": "C++",
                    "actions": [
                        {
                            "type": "command",
                            "label": "C++ builder 1",
                            "command_line": "git clone --branch nautilus https://github.com/SECRET-GUEST/cppTemplate.git cpp_template_1",
                            "cwd": "%f",
                            "use_shell": true
                        }
                    ]
                },
                {
                    "type": "menu",
                    "label": "Python",
                    "actions": [
                        {
                            "type": "command",
                            "label": "Py builder 1 ",
                            "command_line": "git clone -b nautilus https://github.com/SECRET-GUEST/pyTemplate.git Py_builder_1 ",
                            "cwd": "%f",
                            "use_shell": true
                        }
                    ]
                },
                {
                    "type": "menu",
                    "label": "Javascript",
                    "actions": [
                        {
                            "type": "command",
                            "label": "React typescript",
                            "command_line": "git clone --branch reactsx https://github.com/SECRET-GUEST/jsTemplate.git React_typescript_builder_1",
                            "cwd": "%f",
                            "use_shell": true
                        },
                        {
                            "type": "command",
                            "label": "React Three Typescript",
                            "command_line": "git clone --branch threeJs https://github.com/SECRET-GUEST/jsTemplate.git React_three_typescript_builder_1",
                            "cwd": "%f",
                            "use_shell": true
                        }
                    ]
                }
            ]
        }
    ],
    "sort": "manual",
    "debug": false
}
